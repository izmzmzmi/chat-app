<div class="c-content">
  <div class="c-content-info">
    <div class="c-content-user">
      <%= message.user.name %>
    </div>
    <div class="c-content-date">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="c-content-nakami">
    <div class="c-content-message">
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
  </div>
</div>